{
    "compilerOptions": {
        "lib": [
            "ES2021",
            "ES2021.Promise",
            "ES2021.String"
        ],
        "module": "Node16",
        "target": "ES2021",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "server_dist"
    },
    "include": [
        "server/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "lib": [
        "ES2020"
    ]
}